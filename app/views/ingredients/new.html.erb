<h1>New Ingredient</h1>
<% if @ingredient.errors.any? %>
    <% @ingredient.errors.full_messages.each do |msg| %>
        <div id="error_explanation"><%= msg %></div>
    <% end %>
<% end %>

<%= form_for @ingredient do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.submit %>
<% end %>